<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="@dimen/margin_middle"
    android:paddingBottom="@dimen/margin_middle"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:src="@drawable/defualt"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_middle"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="两岸咖啡"
                 android:textColor="@color/text_black_color"
                 android:textSize="@dimen/text_size_18"
                 android:layout_marginRight="@dimen/margin_middle"
                 android:id="@+id/textview"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_middle"
                android:src="@drawable/v_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wai"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/text_red_color"
                android:textSize="@dimen/text_size_16"
                android:id="@+id/textview2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120/人"
                android:textColor="@color/text_red_color"
                android:textSize="@dimen/text_size_16"
                android:id="@+id/textview3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江湾路111号"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/text_size_14"
                android:layout_marginRight="@dimen/margin_middle"
                android:id="@+id/textview6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="酒店"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/text_size_14"
                android:id="@+id/textview5"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_middle"
            android:src="@drawable/list_phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00-21:00"
            android:textColor="@color/text_gray_color"
            android:id="@+id/textview7"
            android:drawableLeft="@drawable/shijian"/>

    </LinearLayout>

</LinearLayout>