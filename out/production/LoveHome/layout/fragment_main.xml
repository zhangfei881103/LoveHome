<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_mainbody_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_mainbody_color"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/fragmentmain_center"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:minWidth="100dp" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragmentmain_buttom"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttom_bg"
                android:orientation="horizontal"
                android:paddingBottom="4dp" >

                <LinearLayout
                    android:id="@+id/index_layout"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/margin_middle"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/index_image"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/home" />

                    <TextView
                        android:id="@+id/index_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="爱家乡"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/publish_layout"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/margin_middle"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/publish_image"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/tab_graborder_press" />

                    <TextView
                        android:id="@+id/publish_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_layout"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/margin_middle"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/my_image"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/wode" />

                    <TextView
                        android:id="@+id/my_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>