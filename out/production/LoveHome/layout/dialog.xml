<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_share_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:paddingRight="10dp"
        android:text="恭喜您获得"
        android:paddingTop="@dimen/margin_middle"
        android:paddingBottom="@dimen/margin_middle"
        android:textColor="@color/text_black_color"
        android:textSize="18sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_large_20"
        android:background="@color/text_gray_color" />

    <LinearLayout
        android:id="@+id/ll_button_sure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <TextView
            android:id="@+id/text_buttom_sure1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确定"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_middle"
            android:layout_marginBottom="@dimen/margin_middle"
            android:textColor="@color/text_blue_buttom_color"
            android:textSize="22sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/text_gray_color" />

        <TextView
            android:id="@+id/text_buttom_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_middle"
            android:textColor="@color/text_blue_buttom_color"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>